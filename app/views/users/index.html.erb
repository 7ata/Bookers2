<div class="container px=5 px-sm-0">
　  <div class= "row">
　    <div class="col-md-3">
　      <h2>User info</h2>
　    </div>
　    
　    <div class="col-md-8 offset-md-1">
　      <h2>Books</h2>
        <%= form_with model: @book do |f| %>
         <div class="field">
          <%= f.label :Title %><br>
          <%= f.text_field :title %>
         </div>

         <div class="field">
           <%= f.label :Opinion %><br>
           <%= f.text_area :body %>
         </div>

         <div class="actions">
           <%= f.submit 'Create Book' %><br>
         </div>
        <% end %>
　    </div>
　  </div>
　</div>